<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.3"?>
<plugin>

<!-- 
####################################################################################### 
#    Extension Points                                                                 # 
####################################################################################### 
-->

	<extension-point id="targetTool" 
		name="Tools used by AVR Target Management" 
		schema="schema/targetTool.exsd"/>

	<extension point="de.innot.avreclipse.core.targetTool">
    	<programmertool
        	class="de.innot.avreclipse.core.targets.tools.AvrdudeTool">
    	</programmertool>
    	<programmertool
        	class="de.innot.avreclipse.core.targets.tools.AvariceTool">
    	</programmertool>
    	<gdbservertool
        	class="de.innot.avreclipse.core.targets.tools.AvariceTool">
    	</gdbservertool>
 </extension>



<!-- 
####################################################################################### 
#    AVR Nature                                                                       # 
####################################################################################### 
-->
 	<extension id="avrnature" name="AVR Nature" point="org.eclipse.core.resources.natures">
       <runtime>
           <run class="de.innot.avreclipse.core.natures.AVRProjectNature" />
       </runtime>
       <requires-nature id="org.eclipse.cdt.core.cnature"/>
   </extension>

<!-- 
####################################################################################### 
#    Content Types                                                                    # 
####################################################################################### 
-->
	<extension
		point="org.eclipse.core.runtime.contentTypes">
		<content-type id="de.innot.avreclipse.contenttype.hexdump.flash"
			base-type="org.eclipse.core.runtime.text"
			file-extensions="hex"
			name="HEX Dump for Flash ROM">
		</content-type>
	</extension>
	<extension
		point="org.eclipse.core.runtime.contentTypes">
		<content-type id="de.innot.avreclipse.contenttype.hexdump.eeprom"
			base-type="org.eclipse.core.runtime.text"
			file-extensions="eep"
			name="HEX Dump for EEPROM">
		</content-type>
	</extension>
	<!--  this does not work because Eclipse is non-case-sensitive, e.g. .s == .S -->
	<extension point="org.eclipse.core.runtime.contentTypes"> 
		<file-association 
	    	content-type="org.eclipse.cdt.core.asmSource"
	       	file-extensions="s,S,asm"/>
	</extension> 

<!--
####################################################################################### 
#    Preference Initializer                                                           # 
####################################################################################### 
-->
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer
			class="de.innot.avreclipse.core.preferences.PreferenceInitializer">
		</initializer>
	</extension>
	
 	

</plugin>

